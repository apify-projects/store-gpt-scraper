{
    "configurations": [
        {
            "name": "entrypoint (extended scraper)",
            "type": "pwa-node",
            "request": "launch",
            "cwd": "${workspaceFolder}/actors/extended-gpt-scraper",
            "program": "src/main.ts",
            "runtimeArgs": [
              "--no-warnings",
              "--experimental-specifier-resolution=node",
              "--loader",
              "../../module_loader.js"
            ],
            "runtimeExecutable": "node",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ]
        }
    ]
}
